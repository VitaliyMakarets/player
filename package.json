{
  "name": "player",
  "version": "1.0.0",
  "description": "simple player with scrobbling",
  "main": "main.js",
  "scripts": {
    "build:assets": "cp app/index.html src/index.html & cp app/styles.css src/styles.css",
    "build:js":"node_modules/.bin/babel app --out-dir src --source-maps",
    "build:electron": "npm run build:assets | npm run build:js",
    "prestart": "npm run build:electron",
    "start": "electron main.js",

    "build": "node_modules/.bin/babel libs --out-dir dist --source-maps",
    "build-watch": "node_modules/.bin/babel libs --out-dir dist --source-maps --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VitaliyMakarets/player.git"
  },
  "keywords": [
    "mp3",
    "audio",
    "player",
    "crossplatform",
    "scrobbling",
    "vk"
  ],
  "author": "vitaliy <o.u.screamaimfire14@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VitaliyMakarets/player/issues"
  },
  "dependencies": {
    "async": "^0.9.0",
    "follow-redirects": "0.0.7",
    "home": "^0.1.3",
    "keypress": "^0.2.1",
    "lame": "^1.2.2",
    "pcm-volume": "^1.0.0",
    "pool_stream": "0.0.2",
    "speaker": "^0.2.6",
    "underscore": "~1.6.0"
  },
  "devDependencies": {
    "babel": "^5.2.17",
    "debug": "^2.1.0",
    "musicmetadata": "1.0.1",
    "electron-prebuilt": "^0.37.8"
  }
}
